// tsconfig.json
{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Tetap pertahankan ini sebagai solusi sementara untuk masalah tipe library
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Atau "node" jika "bundler" masih bermasalah
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "three/addons/*": ["./node_modules/three/examples/jsm/*"],
      // Tambahkan paths mapping ini untuk mengatasi impor tipe dari 'three/src/*'
      "three/src/*": ["./node_modules/@types/three/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
